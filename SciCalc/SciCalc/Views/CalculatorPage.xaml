<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SciCalc.Views.CalculatorPage"
             Title="CalculatorPage">

    <Grid
        RowDefinitions="*,68,48,44,44,48,64,64,64,64"
        ColumnDefinitions="*,*,*,*,*">

        <!--Color Answer Row-->
        <BoxView 
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            BackgroundColor="#262D37"
            Grid.Row="1"
            Grid.ColumnSpan="5"/>

        <!--Color Scientific Rows-->
        <BoxView 
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            BackgroundColor="#2C3240"
            Grid.Row="2"
            Grid.RowSpan="4"
            Grid.ColumnSpan="5"/>

        <!--Input Area-->
        <Frame
            HasShadow="False"
            Padding="6,0,4,0"
            Margin="12"
            BorderColor="{StaticResource PrimaryColor}"
            BackgroundColor="#2C3240"
            HorizontalOptions="EndAndExpand"
            VerticalOptions="EndAndExpand"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5">
            <Label
                LineHeight="1.5"
                VerticalTextAlignment="Center"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding InputText}" Style="{StaticResource InputBoxLabelStyle}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Frame>

        <!--Answer Row-->
        <Grid
            ColumnDefinitions="Auto,*"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="5">

            <Label 
                Text="="
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Style="{StaticResource EqualsLabelStyle}"
                Margin="16,0"/>
            <Label 
                Text="{Binding CalculatedResult, Mode=OneWay}"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                HorizontalOptions="End"
                Grid.Column="1"
                Style="{StaticResource ResultLabelStyle}"
                Margin="16,0"/>
        </Grid>

        <!--Number and Basic Buttons-->
        <!--Row 1: 7, 8, 9-->
        <Button Grid.Row="6" 
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="7"
                Command="{Binding NumberInputCommand}" CommandParameter="7"/>

        <Button Grid.Row="6" 
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="8"
                Command="{Binding NumberInputCommand}" CommandParameter="8"/>

        <Button Grid.Row="6" 
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="9"
                Command="{Binding NumberInputCommand}" CommandParameter="9"/>

        <!--Row 2: 4, 5, 6-->
        <Button Grid.Row="7" 
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="4"
                Command="{Binding NumberInputCommand}" CommandParameter="4"/>

        <Button Grid.Row="7" 
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="5"
                Command="{Binding NumberInputCommand}" CommandParameter="5"/>

        <Button Grid.Row="7" 
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="6"
                Command="{Binding NumberInputCommand}" CommandParameter="6"/>

        <!--Row 3: 1, 2, 3-->
        <Button Grid.Row="8" 
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="1"
                Command="{Binding NumberInputCommand}" CommandParameter="1"/>

        <Button Grid.Row="8" 
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="2"
                Command="{Binding NumberInputCommand}" CommandParameter="2"/>

        <Button Grid.Row="8" 
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="3"
                Command="{Binding NumberInputCommand}" CommandParameter="3"/>

        <!--Row 4: 0, ., backspace-->
        <Button Grid.Row="9" 
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="0"
                Command="{Binding NumberInputCommand}" CommandParameter="0"/>

        <Button Grid.Row="9" 
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="."
                Command="{Binding NumberInputCommand}" CommandParameter="."/>

        <Button Grid.Row="9" 
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="âŒ«"
                Command="{Binding BackspaceCommand}"/>

    </Grid>

</ContentPage>